<!--region 和数据库关联的aop测试-->
<!--    <entity id="transactionTestService" class="xb.transaction.TransactionTestServiceImpl"/>-->
    <!-- tx:advice标签中的txManager属性可以不写（前提是应用的事务管理器名称是transactionManager）   -->
    <tx:advice id="txAdvice" >
        <tx:attributes>
            <tx:method name="get*" read-only="true"/>
            <tx:method name="*"/>
        </tx:attributes>
    </tx:advice>

    <aop:config>
        <aop:pointcut id="pointcutForService" expression="execution(* xb.transaction.TransactionTestService.testRollBackForException(..))"/>
        <aop:advisor advice-ref="txAdvice" pointcut-ref="pointcutForService"/>
    </aop:config>
<!--    endregion-->

<!--region抽象aop测试，不连数据库-->
    <bean id="transactionTestAbstract" class="xb.transaction.TransactionTestAbstractImpl"/>
    <aop:config>
        <aop:pointcut id="pointcutFroAbstract" expression="execution(* xb.transaction.TransactionTestAbstractImpl.*(..))"/>
        <aop:advisor advice-ref="txAdvice" pointcut-ref="pointcutFroAbstract"/>
    </aop:config>
    <!--endregion-->
